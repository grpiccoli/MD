@model AgendaVM

@{
    ViewData["Title"] = "Agenda";
}

<partial name="_Libs" model='new List<string> { "bootstrap", "tooltip.js",
          "jqueryui", "@fullcalendar/core", "@fullcalendar/moment", "@fullcalendar/list", "@fullcalendar/daygrid", "@fullcalendar/timegrid",
"jquery.rut", "libphonenumber-js",
         "flatpickr", "/agenda.min" }' />

@section Styles {
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <!-- BEGIN: VENDOR CSS-->
    <link rel="stylesheet" type="text/css" href="~/css/vendors.min.css">
    <!-- END: VENDOR CSS-->
    <!-- BEGIN: Page Level CSS-->
    <link rel="stylesheet" type="text/css" href="~/css/materialize.min.css">
    <link rel="stylesheet" type="text/css" href="~/css/style.min.css">
    <!-- END: Page Level CSS-->
    <!-- BEGIN: Custom CSS-->
    <link rel="stylesheet" type="text/css" href="~/css/custom.min.css">
    <!-- END: Custom CSS-->
    <style>
        .clinic-gradient, .sidenav li a.active {
            background: teal;
            /*background: linear-gradient(90deg, teal 0%, white 100%);*/
        }

            .clinic-gradient.gradient-shadow, .sidenav li a.active {
                -webkit-box-shadow: 0 6px 20px 0 teal !important;
                box-shadow: 0 6px 20px 0 teal !important;
            }

        #booking-chart, #espec-chart {
            width: 100%;
            height: 200px;
        }
        .select-wrapper{
            width: 100%;
        }
        .fc button{
            background: black!important;
        }
    </style>
}

<partial name="_SideBar" model='"Agenda"' />

<div id="main">
    <div class="row" style="width:100%;">
            <select style="width:60vw;" asp-for="DoctorId" asp-items="Model.DoctorList"></select>
            <div id="event" class="hide" data-url="@Url.Action("AdministrarCita")"
                 data-id data-doctorid data-start data-end data-atencion data-lugar data-run data-locid></div>
    </div>
    <div id="loading"></div>
    <div class="row">
        <div class="col s12 m10">
            <div id='calendar'></div>
        </div>
        <div class="col s12 m2">
            <table class="table table-sm">
                @foreach (var location in Model.LocationList)
                {
                    <tr id="@location.Value">
                        <td><i style="color:@Model.ColorList[int.Parse(location.Value)]" class="fas fa-square"></i></td>
                        <th>@location.Text</th>
                    </tr>
                }
            </table>
        </div>
    </div>
</div>

@section Scripts{
    <script src="~/js/plugins.min.js" type="text/javascript"></script>
    <script src="~/js/custom-script.min.js" type="text/javascript"></script>
}

<partial name="_ValidationScriptsPartial" />