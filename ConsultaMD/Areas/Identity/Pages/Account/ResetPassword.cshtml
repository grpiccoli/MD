@page
@model ResetPasswordModel
@{
    ViewData["Title"] = "Restaurar contraseña";
}

    <partial name="_Libs" model="(new List<string>(), string.Empty)" />

    <div class="row mb-0">
        <partial name="_LeftIconTile" model='"Patient"' />
        <div class="col m6 s12 h-100v">
            <section>
                <h3>@ViewData["Title"]</h3>
                <h5>Restaura tu contraseña.</h5>
                    <div class="col-md-4">
                        <form method="post">
                            <div asp-validation-summary="All" class="text-danger"></div>
                            <input asp-for="Input.Code" type="hidden" />
                            <div class="form-group">
                                <label asp-for="Input.RUT"></label>
                                <input asp-for="Input.RUT" class="form-control" />
                                <span asp-validation-for="Input.RUT" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Input.Password"></label>
                                <input asp-for="Input.Password" class="form-control" />
                                <span asp-validation-for="Input.Password" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Input.ConfirmPassword"></label>
                                <input asp-for="Input.ConfirmPassword" class="form-control" />
                                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                            </div>
                            <button type="submit" class="btn btn-primary pill">Restaurar</button>
                        </form>
                    </div>
                </section>
            </div>
        </div>

                <partial name="_ValidationScriptsPartial" />
