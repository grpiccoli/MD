@page
@model ForgotPasswordModel
@{
    ViewData["Title"] = "¿Olvidó su contraseña?";
}

<partial name="_Libs" model='(new string[] { "jquery.rut", "forgotPassword" }, "")' />

<div class="row mb-0">
    <partial name="_LeftIconTile" model='"Patient"' />
    <div class="col m6 s12 h-100v">
        <section>
            <h1>@ViewData["Title"]</h1>
            <h4>Ingrese su RUT</h4>
            <hr />
            <div class="col-md-4">
                <form method="post">
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="Input.RUT"></label>
                        <input asp-for="Input.RUT" class="form-control" />
                        <span asp-validation-for="Input.RUT" class="text-danger"></span>
                    </div>
                    <button type="submit" class="btn btn-primary pill">Recuperar</button>
                </form>
            </div>
        </section>
    </div>
</div>
<partial name="_ValidationScriptsPartial" />
