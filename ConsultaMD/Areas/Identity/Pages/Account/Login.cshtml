@page
@model LoginModel

@{
    ViewData["Title"] = "Iniciar Sesión";
}

<partial name="_Libs" model='(new List<string>{ "@fortawesome/fontawesome-free", "materialize-social" }, "")' />

<div class="row mb-0">
    <partial name="_LeftIconTile" model='"Patient"' />
    <div class="col m6 s12 h-100v">
        <section>
            <form asp-action="Account" method="post">
                <h3 class="center-align">¡Bienvenido!</h3>
                <p class="center-align">Ingresa tus datos</p>
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="input-field col s12">
                    <input asp-for="Input.RUT" class="validate" autocomplete="username" />
                    <label asp-for="Input.RUT"></label>
                    <span asp-validation-for="Input.RUT" class="text-danger"></span>
                </div>
                <div class="input-field col s12">
                    <input asp-for="Input.Password" class="validate" autocomplete="current-password" />
                    <label asp-for="Input.Password"></label>
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <div class="col s12">
                    <p class="right-align">
                        <a id="forgot-password" asp-page="./ForgotPassword">Olvidé mi contraseña</a>
                    </p>
                    <p class="right-align center">
                        ¿No tienes cuenta?
                        <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">
                            Regístrate
                        </a>
                    </p>
                </div>
                <div class="col s12">
                    <div class="form-group">
                        <button type="submit" class="btn waves-effect waves-light white-text teal pill w-100 tile-gradient">Ingresar</button>
                    </div>
                    <hr />
                </div>
                <div class="col s12 center">
                    <p>Ingresar con redes sociales</p>
                    <p>
                        @foreach (var provider in Model.ExternalLogins)
                        {
                            <button class="external-login btn-floating waves-effect waves-light btn-large social @provider.Name.ToLower()"
                                    value="@provider.Name" data-returnurl="@Model.ReturnUrl">
                                <i class="fab fa-@provider.Name.ToLower()"></i> Ingresar con @provider.Name
                            </button>
                        }
                    </p>
                </div>
            </form>
        </section>
    </div>
</div>

<partial name="_ValidationScriptsPartial" />