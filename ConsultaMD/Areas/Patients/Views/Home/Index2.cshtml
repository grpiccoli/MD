@model ConsultaMD.Models.VM.LoginVM

@{
    ViewData["Title"] = "ConsultaMD";
}

<style>
    body{
        background-image: url("/images/06.jpg");
        background-position: top right;
        background-repeat: no-repeat;
    }
    body:before{
        background-image: url("/images/Shape_Login.png");
        background-position: top center;
        background-repeat: no-repeat;
        background-size: cover;
        position: absolute;
        content: '';
        top: 0;
        left: 0;
        width: 120%;
        height: 120%;
        z-index: -1;
    }
    .form-control{
        background: transparent;
    }
    .form-control:focus{
        background: transparent;
        border-color: lightseagreen;
        box-shadow: inset 0 1px 1px rgba(29,153,158, 0.075), 0 0 8px rgba(29,153,158, 0.6);
    }
    .btn-md{
        border: none;
        color: #fff;
        background-color: #0f4f51;
        /* background-image: linear-gradient(to bottom right, #1d999e, #0f4f51); */
        background-image: linear-gradient(to bottom right, #1d999e, #0f4f51);
        outline: none;
        cursor: pointer;
        display: inline-block;
        text-decoration: none;
        padding: 12px 35px;
        color: #fff !important;
        font-weight: 500;
        text-align: center;
        line-height: 1;
        -moz-transition: all 0.3s ease-in-out;
        -o-transition: all 0.3s ease-in-out;
        -webkit-transition: all 0.3s ease-in-out;
        -ms-transition: all 0.3s ease-in-out;
        transition: all 0.3s ease-in-out;
        -webkit-border-radius: 3px;
        -moz-border-radius: 3px;
        -ms-border-radius: 3px;
        border-radius: 3px;
        box-shadow: 0px 0px 4px #74d5d9;
    }
    nav{
        background: transparent;
    }
    .navbar-nav > li{
      padding-left: 10px;
    }
    .btn-md:hover{
        background: #0f4f51;
        color: #fff;
    }
    .forgot{
        color: #20bebd;
        vertical-align: -webkit-baseline-middle;
        font-weight: 400;
        font-size: 14px;
    }
    .hr{
        color: #169d99;
        background-color: #169d99;
    }
    .login{
        color: #169d99;
        font-size: 30px;
        font-weight: 600;
    }
    .nav-link.btn-success{
        padding: 8px 26px;
        background: #169d99;
        border: 1px solid #169d99;
        font-size: 14px;
    }
    .nav-link.btn-outline-success{
        padding: 8px 26px;
        border: 1px solid #169d99;
        font-size: 14px;
        color: #169d99 !important;
        background: transparent;
    }
    .nav-link{
        min-width: 150px;
    }
    .nav-link:hover{
        background: #333;
        border: 1px solid #333;
    }
</style>

<partial name="_Libs" model='new List<string> { "jquery.rut", "get-sii-rut-data.min.js" }' />

<div class="container login-form">
    <div class="row">
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light border-bottom box-shadow">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                    <img src="~/images/logo.png" />
                </a>
                <div class="navbar-collapse collapse justify-content-end">
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="btn btn-success nav-link text-white" asp-area="" asp-controller="Home" asp-action="Privacy">
                                INGRESAR
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="btn btn-outline-success nav-link" asp-area="" asp-controller="Home" asp-action="Privacy">
                                CREAR USUARIO
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </div>
    <form method="post" class="form-horizontal">
        <div class="form-group pl-3 ml-1">
            <div class="col-3 p-0 m-0">
                <hr class="hr" />
            </div>
            <h2 class="login">
                Ingresar
            </h2>
            <p>Ingresa con tu cuenta ConsultaMD</p>
        </div>
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group col-lg-6 col-md-6">
            <input asp-for="RUT" class="form-control rounded-pill" autocomplete="username"/>
            <span asp-validation-for="RUT" class="text-danger"></span>
        </div>
        <div class="form-group col-lg-6 col-md-6">
            <input asp-for="Password" class="form-control rounded-pill" autocomplete="current-password"/>
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>
        <div class="form-group col-lg-6 col-md-6">
            <div class="row">
                <button asp-action="PasswordRecovery" class="btn col forgot text-left">Recuperar Contraseña</button>
                <div class="col">
                    <button type="submit" class="btn btn-block btn-md rounded-pill">Ingresar</button>
                </div>
            </div>
            <div class="row pt-5">
                <div class="col">
                    <p>o inicia sesión usando tus Redes Sociales</p>
                </div>
            </div>
            <div class="row">
                <div class="col">
                    <div class="row">
                        <a href="#" class="col-2">
                            <img alt="Facebook" src="~/images/facebook.png" />
                        </a>
                        <a href="#" class="col-2">
                            <img alt="Google" src="~/images/google.png" />
                        </a>
                    </div>
                </div>
            </div>
            <div class="row pt-4">
                <div class="col">
                    <p>¿No tienes cuenta? <button asp-action="Create" class="btn forgot">Crea un usuario</button></p>
                </div>
            </div>
        </div>
    </form>
</div>
