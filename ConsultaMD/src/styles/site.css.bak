a.navbar-brand {
    white-space: normal;
    text-align: center;
    word-break: break-all;
}

/* Sticky footer styles
-------------------------------------------------- */
html {
    font-size: 14px;
}

@media (min-width: 768px) {
    html {
        font-size: 16px;
    }
}

h1, h2, h3, h4, h5, h6, th, .card-title {
    color: #18adb3;
}

.border-top {
    border-top: 1px solid #e5e5e5;
}

.border-bottom {
    border-bottom: 1px solid #e5e5e5;
}

.box-shadow {
    box-shadow: 0 .25rem .75rem rgba(0, 0, 0, .05);
}

button.accept-policy {
    font-size: 1rem;
    line-height: inherit;
}

/* Sticky footer styles
-------------------------------------------------- */
html {
    position: relative;
    max-height: 100%;
}

body {
    /* Margin bottom by footer height */
    max-height: 100%;
}

.footer {
    position: absolute;
    /*bottom: 0;*/
    width: 100%;
    white-space: nowrap;
    /* Set the fixed height of the footer here */
    height: 60px;
    line-height: 60px; /* Vertically center the text there */
}

/*
Custom CSS
*/

:root {
    --theme: #1d999e;
}

.clinic{
    background-color: var(--theme) !important;
}

.clinic-text {
    color: var(--theme) !important;
}

.btn {
    border-radius: 20px !important;
    background-image: linear-gradient(to right, #18adb3, #11686b);
}
/* Sidebar CSS */
.sidenav {
    width: 250px !important;
}

.brand-logo img {
    width: 60%;
}
/* Bootstrap */
.mb-0 {
    margin-bottom: 0;
}

.vh-100 {
    height: 100vh;
}

.h-100 {
    height: 100%;
}
.text-danger {
    color: #dc3545 !important;
}